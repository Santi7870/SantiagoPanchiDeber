<?xml version="1.0" encoding="UTF-8" ?>
<Shell

    x:Class="SantiagoPanchi.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SantiagoPanchi.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="True">



    <FlyoutItem Title="Notes" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="All Notes"
            ContentTemplate="{DataTemplate views:AllNotesPage}"
            Route="AllNotePage"
            Icon="Notes.jpg" />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate views:AboutPage}"
            Icon="{OnPlatform 'icon_about.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}" />
    </FlyoutItem>







    <TabBar>
        <ShellContent
            Title="Notes"
            ContentTemplate="{DataTemplate views:AllNotesPage}"
            Icon="{OnPlatform 'icon_catalog.png', MacCatalyst='icon_notes_ios.png'}" />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate views:AboutPage}"
            Icon="{OnPlatform 'icon_user.png', iOS='icon_user.png', MacCatalyst='icon_about_ios.png'}" />
    </TabBar>

</Shell>


